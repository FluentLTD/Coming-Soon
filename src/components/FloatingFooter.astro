---
const year = new Date().getFullYear();

const links = [
    { href: 'https://github.com/your-org', label: 'GitHub', icon: 'github' },
    { href: 'https://x.com/your-handle', label: 'X (Twitter)', icon: 'x' },
    { href: 'https://linkedin.com/in/your-handle', label: 'LinkedIn', icon: 'linkedin' }
];
---

<footer class="floating-footer" role="contentinfo">
    <div class="footer-glass">
        <div class="footer-inner">
            <span class="copyright">Â© {year} R-Fluent</span>
            <nav aria-label="Social links">
                <ul class="social">
                    {
                        links.map((link) => (
                            <li>
                                <a href={link.href} target="_blank" rel="noopener noreferrer" aria-label={link.label} title={link.label}>
                                    {link.icon === 'github' && (
                                        <svg viewBox="0 0 24 24" aria-hidden="true">
                                            <path d="M12 2c-5.53 0-10 4.47-10 10 0 4.42 2.87 8.17 6.84 9.5.5.09.68-.22.68-.48 0-.24-.01-.87-.01-1.71-2.78.61-3.37-1.19-3.37-1.19-.46-1.17-1.12-1.48-1.12-1.48-.92-.63.07-.62.07-.62 1.02.07 1.56 1.05 1.56 1.05.9 1.54 2.36 1.1 2.94.84.09-.65.35-1.1.64-1.35-2.22-.25-4.56-1.11-4.56-4.93 0-1.09.39-1.98 1.03-2.68-.1-.25-.45-1.27.1-2.65 0 0 .85-.27 2.8 1.02A9.8 9.8 0 0 1 12 6.8c.86 0 1.72.12 2.53.34 1.95-1.29 2.8-1.02 2.8-1.02.55 1.38.2 2.4.1 2.65.64.7 1.03 1.59 1.03 2.68 0 3.83-2.34 4.67-4.57 4.92.36.31.69.92.69 1.86 0 1.34-.01 2.42-.01 2.75 0 .26.18.58.69.48A10.01 10.01 0 0 0 22 12c0-5.53-4.47-10-10-10Z" />
                                        </svg>
                                    )}
                                    {link.icon === 'x' && (
                                        <svg viewBox="0 0 24 24" aria-hidden="true">
                                            <path d="M18.244 2H21l-6.58 7.51L22 22h-6.828l-5.34-6.947L3.7 22H1l7.06-8.064L2 2h6.914l4.94 6.51L18.244 2Zm-1.196 18h1.884L7.1 3.99H5.163L17.048 20Z" />
                                        </svg>
                                    )}
                                    {link.icon === 'linkedin' && (
                                        <svg viewBox="0 0 24 24" aria-hidden="true">
                                            <path d="M4.98 3.5C4.98 4.88 3.86 6 2.5 6S0 4.88 0 3.5 1.12 1 2.5 1s2.48 1.12 2.48 2.5ZM.5 8.5h4V24h-4V8.5ZM8 8.5h3.8v2.1h.05c.53-1 1.83-2.1 3.77-2.1 4.03 0 4.78 2.65 4.78 6.1V24h-4v-6.7c0-1.6-.03-3.7-2.25-3.7-2.25 0-2.6 1.76-2.6 3.6V24H8V8.5Z" />
                                        </svg>
                                    )}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </nav>
        </div>
    </div>
</footer>

<style>
    .floating-footer {
        position: fixed;
        left: 50%;
        bottom: 0;
        transform: translateX(-50%);
        width: 100%;
        z-index: 20;
        pointer-events: none;
        padding-bottom: calc(env(safe-area-inset-bottom, 0px) + 12px);
    }

    /* ðŸŒ« Liquid glass shell */
    .footer-glass {
        position: relative;
        overflow: hidden;
        border-radius: 18px;
        max-width: 64rem;
        margin: 0 auto;
        pointer-events: auto;
        border: 1px solid rgba(255, 255, 255, 0.15);
        background: rgba(255, 255, 255, 0.05);
        box-shadow:
            0 8px 32px rgba(0, 0, 0, 0.25),
            inset 0 1px 0 rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(18px);
        -webkit-backdrop-filter: blur(18px);
    }

    /* Animated glow layers */
    .footer-glass::before,
    .footer-glass::after {
        content: '';
        position: absolute;
        inset: -50%;
        background: radial-gradient(circle at var(--x, 30%) var(--y, 70%), rgba(255, 255, 255, 0.15), transparent 60%);
        animation: shimmer 8s ease-in-out infinite alternate;
        mix-blend-mode: screen;
    }

    .footer-inner {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0.75rem 1rem;
        gap: 1rem;
    }

    .copyright {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.9);
        text-shadow: 0 0 6px rgba(255, 255, 255, 0.2);
    }

    .social {
        list-style: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin: 0;
        padding: 0;
    }

    .social a {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 38px;
        height: 38px;
        border-radius: 12px;
        background: rgba(255, 255, 255, 0.08);
        border: 1px solid rgba(255, 255, 255, 0.15);
        transition:
            transform 200ms ease,
            background 250ms ease,
            border-color 250ms ease;
    }

    .social a:hover {
        transform: translateY(-2px) scale(1.05);
        background: rgba(255, 255, 255, 0.15);
        border-color: rgba(255, 255, 255, 0.35);
    }

    .social svg {
        width: 18px;
        height: 18px;
        fill: rgba(255, 255, 255, 0.92);
        filter: drop-shadow(0 0 6px rgba(255, 255, 255, 0.25));
    }

    @keyframes shimmer {
        0% {
            --x: 25%;
            --y: 70%;
        }
        100% {
            --x: 75%;
            --y: 30%;
        }
    }

    @media (max-width: 480px) {
        .footer-inner {
            padding: 0.6rem 0.8rem;
            flex-direction: column;
            text-align: center;
            gap: 0.6rem;
        }
    }
</style>
