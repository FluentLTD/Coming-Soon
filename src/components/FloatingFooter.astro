---
const year = new Date().getFullYear();
const links = [
    { href: 'https://github.com/your-org', label: 'GitHub', icon: 'github' },
    { href: 'https://x.com/your-handle', label: 'X (Twitter)', icon: 'x' },
    { href: 'https://linkedin.com/in/your-handle', label: 'LinkedIn', icon: 'linkedin' }
];

function Icon({ name }: { name: string }) {
    if (name === 'github') {
        return (
            <svg viewBox="0 0 24 24" aria-hidden="true">
                <path d="M12 2c-5.53 0-10 4.47-10 10 0 4.42 2.87 8.17 6.84 9.5.5.09.68-.22.68-.48 0-.24-.01-.87-.01-1.71-2.78.61-3.37-1.19-3.37-1.19-.46-1.17-1.12-1.48-1.12-1.48-.92-.63.07-.62.07-.62 1.02.07 1.56 1.05 1.56 1.05.9 1.54 2.36 1.1 2.94.84.09-.65.35-1.1.64-1.35-2.22-.25-4.56-1.11-4.56-4.93 0-1.09.39-1.98 1.03-2.68-.1-.25-.45-1.27.1-2.65 0 0 .85-.27 2.8 1.02A9.8 9.8 0 0 1 12 6.8c.86 0 1.72.12 2.53.34 1.95-1.29 2.8-1.02 2.8-1.02.55 1.38.2 2.4.1 2.65.64.7 1.03 1.59 1.03 2.68 0 3.83-2.34 4.67-4.57 4.92.36.31.69.92.69 1.86 0 1.34-.01 2.42-.01 2.75 0 .26.18.58.69.48A10.01 10.01 0 0 0 22 12c0-5.53-4.47-10-10-10Z" />
            </svg>
        );
    }
    if (name === 'x') {
        return (
            <svg viewBox="0 0 24 24" aria-hidden="true">
                <path d="M18.244 2H21l-6.58 7.51L22 22h-6.828l-5.34-6.947L3.7 22H1l7.06-8.064L2 2h6.914l4.94 6.51L18.244 2Zm-1.196 18h1.884L7.1 3.99H5.163L17.048 20Z" />
            </svg>
        );
    }
    if (name === 'linkedin') {
        return (
            <svg viewBox="0 0 24 24" aria-hidden="true">
                <path d="M4.98 3.5C4.98 4.88 3.86 6 2.5 6S0 4.88 0 3.5 1.12 1 2.5 1s2.48 1.12 2.48 2.5ZM.5 8.5h4V24h-4V8.5ZM8 8.5h3.8v2.1h.05c.53-1 1.83-2.1 3.77-2.1 4.03 0 4.78 2.65 4.78 6.1V24h-4v-6.7c0-1.6-.03-3.7-2.25-3.7-2.25 0-2.6 1.76-2.6 3.6V24H8V8.5Z" />
            </svg>
        );
    }
    return null;
}
---

<footer class="floating-footer" role="contentinfo">
    <div class="footer-inner">
        <span class="copyright">© {year} R‑Fluent</span>
        <nav aria-label="Social links">
            <ul class="social">
                {
                    links.map((l) => (
                        <li>
                            <a href={l.href} target="_blank" rel="noopener noreferrer" aria-label={l.label} title={l.label}>
                                <Icon name={l.icon} />
                            </a>
                        </li>
                    ))
                }
            </ul>
        </nav>
    </div>
</footer>

<style>
    .floating-footer {
        position: fixed;
        left: 50%;
        bottom: 0;
        transform: translateX(-50%);
        z-index: 10;
        padding-bottom: calc(env(safe-area-inset-bottom, 0px) + 12px);
        width: 100%;
        pointer-events: none;
    }
    .footer-inner {
        pointer-events: auto;
        margin: 0 auto;
        max-width: 64rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        padding: 0.5rem 0.875rem;
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.12);
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.06), rgba(255, 255, 255, 0.03));
        box-shadow:
            0 8px 24px rgba(0, 0, 0, 0.25),
            inset 0 1px 0 rgba(255, 255, 255, 0.08);
    }
    @supports (backdrop-filter: blur(8px)) or (-webkit-backdrop-filter: blur(8px)) {
        .footer-inner {
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
        }
    }
    .copyright {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.85);
        letter-spacing: 0.01em;
    }
    .social {
        list-style: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin: 0;
        padding: 0;
    }
    .social a {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        border-radius: 10px;
        border: 1px solid rgba(255, 255, 255, 0.12);
        background: rgba(255, 255, 255, 0.05);
        transition:
            background-color 150ms ease,
            border-color 150ms ease,
            transform 150ms ease;
    }
    .social a:hover,
    .social a:focus-visible {
        background: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.22);
        transform: translateY(-1px);
        outline: none;
    }
    .social svg {
        width: 18px;
        height: 18px;
        fill: rgba(255, 255, 255, 0.9);
    }
    @media (max-width: 480px) {
        .footer-inner {
            padding: 0.5rem 0.625rem;
            border-radius: 14px;
        }
        .copyright {
            font-size: 0.85rem;
        }
    }
    @media (prefers-reduced-motion: reduce) {
        .social a {
            transition: none;
        }
    }
</style>
